<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContatosApp.MainPage">

    <!-- Definição da página -->
    <ScrollView>

        <!-- Layout vertical -->
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <!-- Logotipo do projeto -->
            <Image
                Source="logo_coti.png"
                HeightRequest="240"
                HorizontalOptions="Center"/>

            <!-- Botão para inicializar a aplicação! -->
            <Button
                x:Name="BtnIniciarAplicacao"
                Text="Iniciar aplicação"
                HorizontalOptions="Center"
                Clicked="BtnIniciarAplicacao_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>